
{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}


<!-- Ajoutez d'autres informations que vous souhaitez afficher -->

 <h1 class="text-orange fs-name text-center">Bonjour {{ app.user.Prenom }}</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10"> <!-- Utilisation de col-lg-10 pour occuper plus de 3/4 de l'écran sur les écrans larges -->
      <div class="card mb-3 bg-dark">
        <img src="{{ asset('images/profil.webp') }}" class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h5 class="card-text pro-name text-center">{{ app.user.Nom }} {{ app.user.Prenom }}</h5>
          <p class="card-title text-white text-center fs-4">{{ app.user.email }}</p>
           <h5 class="card-title text-white text-center fs-2">{{ app.user.adresse }}</h5>
            <h5 class="card-title text-white text-center fs-2">{{ app.user.ville }} {{ app.user.codepostale }}</h5>
           
              <h5 class="card-title text-white text-center fs-2">{{ app.user.pays }}</h5>
          <div><a href="{{ path('app_profil_edit') }}" class="btn btn-warning">Modifier</a>
     
            </div>
        </div>
      </div>
    </div>
  </div>
</div> 
<style>
    .card {
        border: 1px solid white; /* Définir la bordure de la carte en blanc */
    }
       .btn-custom:hover {
        background-color: white; /* Couleur de fond au survol */
        color: blue; /* Couleur du texte au survol */
    }
    .pro-name {
       color: white;
      -webkit-text-stroke-width: 2px;
      -webkit-text-stroke-color:rgb(0, 140, 255);
      font-size:6rem
    }
    .fs-name {
      font-size:5rem
    }
</style> 
{% endblock %}
