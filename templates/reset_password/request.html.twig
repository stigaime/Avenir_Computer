{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1 class="text-orange text-center">Réinitialiser votre mot de passe</h1>

            {{ form_start(requestForm) }}
                <div class="form-group">
                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div>
                    <small class="text-white">
                        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <div class="text-center mt-3">
                    <button class="btn btn-primary">Envoyer l'email de réinitialisation</button>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
