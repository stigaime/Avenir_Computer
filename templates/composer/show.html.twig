{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Composants{% endblock %}
{% block body %}
<body>
 <h1 class="text-orange text-center">{{ composer.name }}</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card bg-dark mb-3">
        {% if composer.picture %}
          <img src="{{ asset('images/' ~ composer.picture) }}" class="card-img-top" alt="{{ composer.name }}">
        {% else %}
          <img src="{{ asset('images/default-image.jpg') }}" class="card-img-top" alt="Image non disponible">
        {% endif %}
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <p class="card-text text-white text-center">{{ composer.description | raw }}</p>
          <h5 class="card-title text-white text-center">{{ composer.price }} â‚¬</h5>
          <form action="{{ path('app_cart_add', {'idComposer': composer.id}) }}" method="POST">
              <input type="submit" class="btn btn-success" value="Ajouter au panier" />
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .card {
        border: 1px solid white;
    }
    .card-img-top {
        width: 100%;
        height: 60%;
        object-fit: cover;
    }
    .btn-custom:hover {
        background-color: white;
        color: blue;
    }
</style>

</body>
{% endblock %}
