{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Composants{% endblock %}
{% block body %}
<body>

 <h1 class="text-orange text-center">{{ composer.name }}</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10"> <!-- Utilisation de col-lg-9 pour occuper 3/4 de l'écran sur les écrans larges -->
      <div class="card bg-dark mb-3">
        {% if composer.picture %}
          <img src="{{ asset('images/' ~ composer.picture) }}" class="card-img-top" alt="{{ composer.name }}">
        {% else %}
          <img src="{{ asset('images/default-image.jpg') }}" class="card-img-top" alt="Image non disponible">
        {% endif %}
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <p class="card-text text-white text-center">{{ composer.description | raw }}</p>
          <h5 class="card-title text-white text-center">{{ composer.price }} €</h5>
          <a href="" class="btn btn-custom">Acheter</a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .card {
        border: 1px solid white; /* Définir la bordure de la carte en blanc */
    }
    .card-img-top {
        width: 100%; /* Ensure the image takes the full width of its container */
        height: 60%; /* Maintain the aspect ratio */
        object-fit: cover; /* This ensures the image covers the area without distortion */
     }
    .btn-custom:hover {
        background-color: white; /* Couleur de fond au survol */
        color: blue; /* Couleur du texte au survol */
    }
</style>

</body>
{% endblock %}
